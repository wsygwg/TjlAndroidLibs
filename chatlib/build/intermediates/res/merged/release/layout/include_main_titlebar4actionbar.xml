<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#689afd">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/id_main_titlebar_back"
            android:layout_width="@dimen/y35"
            android:layout_height="@dimen/y35"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/y8"
            android:src="@drawable/pic_login_titlebar_back"/>

        <TextView
            android:id="@+id/id_main_titlebar_back_text"
            android:layout_width="@dimen/y35"
            android:layout_height="@dimen/y35"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:src="@drawable/pic_login_titlebar_back"
            android:text="后退"
            android:textSize="@dimen/x15"
            android:visibility="gone"/>
    </LinearLayout>

    <TextView
        android:id="@+id/id_main_titlebar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:text="标题"
        android:textColor="#FFF"
        android:textSize="@dimen/x15"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/id_main_titlebar_option_img"
            android:layout_width="@dimen/y35"
            android:layout_height="@dimen/y35"
            android:layout_marginRight="@dimen/x10"
            android:src="@drawable/pic_login_titlebar_setting"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/id_main_titlebar_option"
            android:layout_width="@dimen/y35"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="搜索"
            android:textColor="#FFF"
            android:textSize="@dimen/x15"/>
    </LinearLayout>

</RelativeLayout>