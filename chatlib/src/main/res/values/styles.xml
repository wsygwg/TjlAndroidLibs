<resources>

    <!-- Base application theme. --><style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">
        @color/colorPrimary
    </item>
    <item name="colorPrimaryDark">
        @color/colorPrimaryDark
    </item>
    <item name="colorAccent">
        @color/colorAccent
    </item>
</style>

    <style name="Theme_audioDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">
            @mipmap/tb_dialog_loading_bg
        </item>
        <item name="android:windowFrame">@null
        </item>
        <item name="android:windowIsFloating">
            true
        </item>
        <item name="android:windowIsTranslucent">
            true
        </item>
        <item name="android:backgroundDimEnabled">
            false
        </item>
    </style>

    <style name="bottomBarStyle">
        <item name="android:textSize">@dimen/x40
        </item>
        <item name="android:textColor">
            @color/color_icon_bottom_grey
        </item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp
        </item>
        <item name="android:layout_height">
            @dimen/x55
        </item>
        <item name="android:layout_weight">1
        </item>
        <item name="android:layout_margin">
            @dimen/x5
        </item>
    </style>

    <style name="bottomBarTextStyle">
        <item name="android:textSize">@dimen/x10
        </item>
        <item name="android:textColor">
            #000000
        </item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content
        </item>
        <item name="android:layout_height">
            wrap_content
        </item>
    </style>

    <style name="bottomIcon">
        <item name="android:layout_width">@dimen/x30
        </item>
        <item name="android:layout_height">@dimen/x30
        </item>
        <item name="android:textSize">@dimen/x25
        </item>
        <item name="android:textColor">@color/color_icon_black
        </item>
        <item name="android:gravity">center</item>
    </style>
</resources>
